<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10px"
            android:hint="@string/hCorreo"
            android:textSize="22sp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10px"
            android:hint="@string/hClave"
            android:textSize="22sp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btIngresar"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:onClick="login"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10px"
            android:textSize="18sp"
            android:text="@string/btIngresar" />

        <Button
            android:id="@+id/btRegistrar"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10px"
            android:onClick="registrar"
            android:textSize="18sp"
            android:text="@string/btRegistrar" />

        <TextView
            android:layout_marginTop="15px"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Si es la primera vez que utiliza el app, por favor llene los campos de arriba y presione registrar. Despues de esto ya puede clickear en ingresar y sus datos seran guardados para proximos usos." />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>